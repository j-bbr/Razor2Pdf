{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": ["*/*.csproj"],
          "exclude": ["UnitTests/*"]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "globalMetadata": {
      "_baseUrl": "https://razor2pdf.nano-byte.net/",
      "_appTitle": "Razor2Pdf",
      "_appFooter": "Copyright Bastian Eicher",
      "_disableBreadcrumb": true,
      "_enableNewTab": true
    },
    "content": [
      {
        "files": [
          "*.md",
          "toc.yml",
          "api/*.yml"
        ]
      }
    ],
    "overwrite": [
      {
        "src": "../src/",
        "files": ["**/*.md"]
      }
    ],
    "xrefService": [
      "https://xref.docs.microsoft.com/query?uid={uid}"
    ],
    "dest": "../artifacts/Documentation"
  }
}
